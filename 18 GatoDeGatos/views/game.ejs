<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gato de Gatos - Jugando</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/game.css">
</head>
<body style="background: #d4e0e8;">
    <div style="max-width: 1400px; margin: 2rem auto; padding: 1rem;">
            <header style="background-color: #34495e; color: white; padding: 1.5rem; text-align: center; border-radius: 12px; margin-bottom: 2rem;">
            <h1>GATO DE GATOS</h1>
        </header>

        <!-- Información de jugadores -->
        <div class="players-info">
            <div class="player-card" id="player1-card">
                <h3><%= jugador1.nombre %></h3>
                <div class="player-symbol">O</div>
                <div class="player-stats">
                    Puntos: <%= jugador1.puntaje_total %> | 
                    Ganadas: <%= jugador1.partidas_ganadas %>
                </div>
                <div class="player-stats">Tableros ganados: <span id="tableros-j1">0</span></div>
            </div>

            <div class="player-card" id="player2-card">
                <h3><%= jugador2.nombre %></h3>
                <div class="player-symbol">X</div>
                <div class="player-stats">
                    Puntos: <%= jugador2.puntaje_total %> | 
                    Ganadas: <%= jugador2.partidas_ganadas %>
                </div>
                <div class="player-stats">Tableros ganados: <span id="tableros-j2">0</span></div>
            </div>
        </div>

        <!-- Mensaje de turno -->
        <div class="turn-message" id="turn-message">
            Turno de <%= jugador1.nombre %> (O)
        </div>

        <!-- Tablero principal -->
        <div class="main-board" id="main-board">
            <!-- Se generará dinámicamente con JavaScript -->
        </div>

        <!-- Controles -->
        <div class="game-controls">
            <button onclick="window.location.href='/'"> Volver al Menú</button>
            <button onclick="resetGame()"> Reiniciar Partida</button>
        </div>

        <footer style="background: #2c3e50; color: white; text-align: center; padding: 1.5rem; border-radius: 12px; margin-top: 2rem;">
            <p><a href="../index.html">Regresar</a></p>
        </footer>
    </div>

    <!-- Datos del servidor -->
    <script>
        const gameData = {
            jugador1: {
                id: "<%= jugador1.id %>",
                nombre: "<%= jugador1.nombre %>",
                simbolo: "O"
            },
            jugador2: {
                id: "<%= jugador2.id %>",
                nombre: "<%= jugador2.nombre %>",
                simbolo: "X"
            }
        };
    </script>
    <script src="/js/game.js"></script>
</body>
</html>
